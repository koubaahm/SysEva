{% extends 'base.html.twig' %}
{% block title %}Modify Informations{% endblock %}

{% block body %}

      <div class="h-6"></div>
      <!-- Contenu de la liste des sections -->
      
      <div class="flex-grow flex justify-center items-center bg-white">
    <div class="mt-3 bg-gray-200 rounded-lg shadow p-4 flex-grow">
        <form method="POST" id="user_form" class="mx-auto mt-16 max-w-xl sm:mt-20">
            {{ form_start(form) }}
            
                <div>
                    <div class="mt-2.5">
                        {{ form_row(form.nom, {'attr': {'id': 'nom', 'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm shadow-blue-500 ring-1 ring-inset ring-blue-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-400 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>
                <div>
                    <div class="mt-2.5">
                        {{ form_row(form.prenom, {'attr': {'id': 'prenom', 'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset shadow-blue-500 ring-blue-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-400 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>
                <div class="sm:col-span-2">
                    <div class="relative mt-2.5">
                        {{ form_row(form.numTel, {'attr': {'id': 'numTel', 'class': 'block w-full rounded-md border-0 px-3.5 py-2 pl-20 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>
                <div class="sm:col-span-2">
                    <div class="mt-2.5">
                        {{ form_row(form.laboratoire, {'attr': {'id': 'laboratoire', 'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset shadow-blue-500 ring-blue-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-400 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>
                <div class="sm:col-span-2">
                    <label class="block text-sm font-semibold leading-6 text-black">Skills</label>
                    <div class="mt-2.5">
                        {{ form_widget(form.competences, {'attr': {'multiple': 'multiple', 'id': 'competences', 'class': 'block w-full rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>
            
            <button type="submit" class="block w-full rounded-md bg-[#f89406] dark:bg-[#f89406] p-5 hover:bg-orange-800 px-3.5 py-2.5 text-center text-sm font-semibold text-black shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 mt-10">Save</button>
            {{ form_end(form) }}
        </form>
    </div>
</div>
    
    

{% endblock %}
