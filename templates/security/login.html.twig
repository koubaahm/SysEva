{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="relative flex h-full w-full">
  <!-- Left side with background image -->
  <div class="h-screen w-1/2 flex justify-center items-center" style="background-image: url('{{ asset('image/syseva.webp') }}'); background-size: cover; background-position: center;">
    <!-- Centered container with transparent background, fixed width, and height -->
    <div class="bg-white bg-opacity-20 p-6 rounded-lg shadow-lg flex flex-col items-center justify-center" style="max-width: 95%;">
      <h1 class="text-3xl font-bold mb-4">Let's Evaluate</h1>
      <!-- Flex container for side-by-side images with adjusted width and center alignment -->
      <div class="flex justify-center items-center w-full">
        <img src="{{ asset('images/univr.png') }}" class="w-1/2 max-w-none" style="object-fit: contain;" />
        <img src="{{ asset('images/imiayearbook.jpg') }}" class="w-1/2 max-w-none" style="object-fit: contain;" />
      </div>
    </div>
  </div>
  <div class="w-1/2 flex justify-center items-center" style="background-image: linear-gradient(to bottom right, #000000, #c89116);">
    <div class="mx-auto flex h-full w-2/3 flex-col justify-center text-black xl:w-1/2">
      <div class="bg-[#e2c88c] dark:bg-[#e2c88c] p-6 rounded-lg">
        <div>
          <img src="{{ asset('images/syseva.png') }}" alt="Syseva" class="mx-auto mb-4" />
        </div>
        <div class="mt-10">
          <form method="post">
            {% if error %}
            <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg" role="alert">
              {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
            {% endif %}
            {% if app.user %}
            <div class="mb-3">
              You are logged in as {{ app.user.nom }}, <a href="{{ path('app_logout') }}" class="text-blue-500 hover:underline">Logout</a>
            </div>
            {% endif %}
            <div>
              <label class="mb-2.5 block font-extrabold" for="inputEmail">Email</label>
              <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="inline-block w-full rounded-full bg-gray p-2.5 leading-none text-black placeholder-gray-500 shadow placeholder:opacity-30" placeholder="mail@user.com" required autofocus>
            </div>
            <div class="mt-4">
              <label class="mb-2.5 block font-extrabold" for="inputPassword">Password</label>
              <input type="password" name="password" id="inputPassword" class="inline-block w-full rounded-full bg-gray p-2.5 leading-none text-black placeholder-gray-500 shadow" placeholder="Password" required>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="mt-4 flex w-full flex-col justify-between sm:flex-row">
              <div>
                <input type="checkbox" id="remember_me" name="_remember_me" /><label for="remember_me" class="mx-2 text-sm">Remember me</label>
              </div>
              <div>
                <a href="{{ path('app_forgot_password_request') }}" class="text-sm hover:text-gray-200">Forgot password?</a>
              </div>
            </div>
            <div class="my-10">
              <button class="w-full rounded-full bg-orange-600 p-5 hover:bg-orange-800 text-white">Sign In</button>
            </div>

            <div class="mt-4 text-xs text-black">Â©2024 SysEva. All rights reserved.</div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
