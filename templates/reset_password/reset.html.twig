{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
<style>
    .container {
        max-width: 600px;
        margin: 5% auto 0;
        padding: 20px;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.1);
    }
    .header {
        background-color: #f5f5f5;
        padding: 15px;
        text-align: center;
        border-radius: 8px 8px 0 0;
    }
    .header h1 {
        margin: 0;
        font-size: 24px;
    }
    .body {
        padding: 20px;
    }
    .form-group {
        margin-bottom: 15px;
    }
    .form-label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        font-size: 16px;
    }
    .form-control {
        width: 100%;
        padding: 8px;
        font-size: 16px;
        line-height: 20px;
        border: 1px solid #cccccc;
        border-radius: 4px;
    }
    button {
        padding: 10px 20px;
        background-color: #ff9800; /* Same as email button orange */
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }
    button:hover {
        background-color: #e67e22; /* A bit darker on hover, as in the email */
    }
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
        padding: 10px;
        border-radius: 4px;
        margin-bottom: 20px;
    }
</style>
<div class="container">
    <div class="header">
        <h1>Reset your password</h1>
    </div>
    <div class="body">
        {% for flash_message in app.flashes('success') %}
        <div class="alert-success">
            {{ flash_message }}
        </div>
        {% endfor %}
        {{ form_start(resetForm, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_label(resetForm.plainPassword, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(resetForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(resetForm.plainPassword) }}
            </div>
            <div class="form-group">
                <button type="submit">Reset password</button>
            </div>
        {{ form_end(resetForm) }}
    </div>
</div>
{% endblock %}

