{# templates/evaluation.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Evaluate!{% endblock %}

{% block body %}

<div class="h-6"></div>
<!-- Form -->

<div class="flex-grow flex justify-center items-center bg-white">
  <div class="mt-3 bg-gray-200 rounded-lg shadow p-4 flex-grow">
    <div class="w-full md:w-1/2 p-4 flex flex-col items-center">
      <div class="h-6"></div>
      <form id="evaluationForm" method="post" class="w-full">
        <h1 class="text-center" style="font-size: 2em; font-family: 'Arial', sans-serif; color: #2c3e50;">
          Let's Evaluate!
        </h1>
        <p style="font-family: 'Arial', sans-serif; color: #2c3e50;">
          Fields marked with <span style="color: red;">*</span> are required.
        </p>
        <div class="form-group">
          {% for critere in criteres %}
          <div class="mb-4">
            {% if critere.coefficient == 5 %}
            <label for="{{ critere.intitule }}" class="required">{{ critere.intitule }}</label>
            <input type="number" id="{{ critere.intitule }}" name="{{ critere.intitule }}" class="form-control mt-2" required min="1" max="5" size="40" placeholder="Enter a value between 1 and 5" style="width: 100%;">
            {% elseif critere.coefficient == 4 %}
            <label class="required">{{ critere.intitule }}</label>
            <div class="radio-group mt-2">
              <div class="radio-option">
                <input type="radio" id="yes_{{ critere.intitule }}" name="{{ critere.intitule }}" value="YES" required>
                <label for="yes_{{ critere.intitule }}" class="radio-label">YES</label>
              </div>
              <div class="radio-option">
                <input type="radio" id="maybeYes_{{ critere.intitule }}" name="{{ critere.intitule }}" value="Maybe Yes" required>
                <label for="maybeYes_{{ critere.intitule }}" class="radio-label">Maybe Yes</label>
              </div>
              <div class="radio-option">
                <input type="radio" id="maybeNo_{{ critere.intitule }}" name="{{ critere.intitule }}" value="Maybe No" required>
                <label for="maybeNo_{{ critere.intitule }}" class="radio-label">Maybe No</label>
              </div>
              <div class="radio-option">
                <input type="radio" id="no_{{ critere.intitule }}" name="{{ critere.intitule }}" value="NO" required>
                <label for="no_{{ critere.intitule }}" class="radio-label">NO</label>
              </div>
            </div>
            {% endif %}
          </div>
          {% endfor %}
          <div class="mb-4">
            <label for="commentaire" style="vertical-align: top;" class="required">Comment</label>
            <textarea id="commentaire" name="commentaire" class="form-control mt-2" rows="4" cols="80" placeholder="Enter your comment here..." required style="width: 100%;"></textarea>
          </div>
        </div>
        <div class="text-center mt-4">
          <button class="bg-[#f89406] text-white p-3 rounded-lg hover:bg-orange-700 focus:outline-none" type="button" onclick="window.history.back()">Cancel</button>
          <button class="bg-[#f89406] text-white p-3 rounded-lg hover:bg-orange-700 focus:outline-none" type="submit" name="action" value="save" formaction="{{ path('app_evaluer', {'id': id}) }}">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
  .required:after {
    content: ' *';
    color: red;
  }
  .form-group {
    width: 100%;
  }
</style>

{% endblock %}
