{# templates/article.html.twig #}

 
{% extends 'base.html.twig' %}
 
{% block title %}Edit Evaluation{% endblock %}


 
{% block body %}
 
 
<main class="flex-grow p-4">
<!-- Main content area -->
<nav class="bg-gray-200 w-full flex justify-between items-center mx-auto px-5 h-20 rounded-lg">
 
<div class="hidden sm:block flex-grow justify-start px-4">
</div>
  <h1 class="flex-grow" style="font-size: 2em; font-family: 'Arial', sans-serif; color: #2c3e50; ">
    Edit Evaluation
</h1>

</nav>

<div class="h-6"></div>
<!-- Formulaire -->

<div class="flex-grow flex justify-center items-center bg-white">
  <div class="mt-3 bg-gray-200 rounded-lg shadow p-4 flex-grow">
    <h2 class="text-center" style="font-size: 1.5em; font-family: 'Arial', sans-serif; color: #2c3e50;">Details of the Previous Evaluation</h2>
    <div class="h-6"></div>
    <form id="evaluationForm" method="post">
    <p style="font-family: 'Arial', sans-serif; color: #2c3e50;">
      Fields marked with <span style="color: red;">*</span> are required.
    </p>
      <div class="form-group">
        {% for critere in criteres %}
        <div class="mb-4">
          {% if critere.coefficient == 5 %}
          <label for="{{ critere.intitule }}" class="required">{{ critere.intitule }}</label>
          <input type="number" id="{{ critere.intitule }}" name="{{ critere.intitule }}" class="form-control mt-2" value="{{ notes[(critere.id)-1] }}" required min="1" max="5" size="40" placeholder="Enter a value between 1 and 5" style="width: 60ch;">
          {% elseif critere.coefficient == 4 %}
          <label class="required">{{ critere.intitule }}</label>
          <div class="radio-group mt-2">
            <div class="radio-option">
              <input type="radio" id="yes_{{ critere.intitule }}" name="{{ critere.intitule }}" value="YES" {% if notes[6] == "YES" %} checked {% endif %} required>
              <label for="yes_{{ critere.intitule }}" class="radio-label">YES</label>
            </div>
            <div class="radio-option">
              <input type="radio" id="maybeYes_{{ critere.intitule }}" name="{{ critere.intitule }}" value="Maybe Yes" {% if notes[6] == "Maybe Yes" %} checked {% endif %} required>
              <label for="maybeYes_{{ critere.intitule }}" class="radio-label">Maybe Yes</label>
            </div>
            <div class="radio-option">
              <input type="radio" id="maybeNo_{{ critere.intitule }}" name="{{ critere.intitule }}" value="Maybe No" {% if notes[6] == "Maybe No" %} checked {% endif %} required>
              <label for="maybeNo_{{ critere.intitule }}" class="radio-label">Maybe No</label>
            </div>
            <div class="radio-option">
              <input type="radio" id="no_{{ critere.intitule }}" name="{{ critere.intitule }}" value="NO" {% if notes[6] == "NO" %} checked {% endif %} required>
              <label for="no_{{ critere.intitule }}" class="radio-label">NO</label>
            </div>
          </div>
          {% endif %}
        </div>
        {% endfor %}
        <div class="mb-4">
          <label for="commentaire" style="vertical-align: top;" class="required">Comment</label>
          <textarea id="commentaire" name="commentaire" class="form-control mt-2" rows="4" cols="80" placeholder="Enter your comment here..." required>{{ evaluation.commentaire }}</textarea>
        </div>
      </div>
      <div class="text-center mt-4">
        <button class="bg-[#f89406] text-white p-3 rounded-lg hover:bg-orange-700 focus:outline-none" type="button" onclick="window.history.back()">Cancel</button>
        <button class="bg-[#f89406] text-white p-3 rounded-lg hover:bg-orange-700 focus:outline-none" type="submit" name="action" value="save" formaction="{{ path('app_evalModifSave', {'id_eval': id_eval}) }}">Save</button>
      </div>
    </form>
  </div>
</div>
<style>
  .required:after {
    content: ' *';
    color: red;
  }
</style>
{% endblock %}