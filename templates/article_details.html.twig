{# templates/section/index.html.twig #}

{% extends 'base.html.twig' %}
{% block title %}{% endblock %}


{% block body %}
      <div class="h-6"></div>

<div class="container mx-auto px-4">
            <h1 class="text-2xl font-semibold mb-5">{{ article.titre }}</h1>
            <div class="text-sm text-gray-500">PMID: {{ article.pmid }}</div>
            <div class="text-sm text-gray-500">DOI: {{ article.doi }}</div>
            <div class="text-sm text-gray-500">Main Author: {{ article.auteurPrincipale }}</div>
            <div class="text-sm text-gray-500">Authors: {{ article.auteurs }}</div>
            <div class="text-sm text-gray-500">Affiliation: {{ article.affiliation }}</div>
            <div class="text-sm text-gray-500">Section: {{ article.section.nom }}</div>
            <div class="-mt-px flex divide-x divide-gray-200">
                <div class="flex w-0 flex-1">
                    <a href="{{ path('download_pdf', {'filename': article.pdfFileName}) }}" class="relative -mr-px inline-flex w-0 flex-1 items-center justify-center py-4 text-sm font-semibold text-gray-900 gap-x-3 rounded-bl-lg border border-transparent">
                        <!-- Download Icon -->
                        <button type="button" class="text-gray-900 bg-[#f89406] dark:bg-[#f89406] font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2">
                            Download
                        </button>
                    </a>
                </div>
                <div class="-ml-px flex w-0 flex-1">
                    <a href="{{ path('delete_article', {'id': article.id}) }}" onclick="return confirm('Are you sure you want to delete this article?')" class="relative inline-flex w-0 flex-1 items-center justify-center py-4 text-sm font-semibold text-gray-900 gap-x-3 rounded-br-lg border border-transparent">
                        <!-- Delete Icon -->
                        <button type="button" class="text-gray-900 bg-[#f89406] dark:bg-[#f89406] font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" onclick="return confirm('Are you sure you want to delete this article?')">Delete</button>
                    </a>
                </div>
            </div>
            <iframe src="{{ path('preview_pdf', {'filename': article.pdfFileName}) }}" width="100%" height="600px" frameborder="0"></iframe>

    </div>
    </main>
</div>
{% endblock %}
